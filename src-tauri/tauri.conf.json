{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "TauriTavern",
  "version": "0.1.0",
  "identifier": "com.tauritavern.app",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "TauriTavern",
        "width": 1280,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "center": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$APPCACHE/**",
          "$APPCACHE/*",
          "$APPDATA/**",
          "$APPDATA/*",
          "$APPLOCALDATA/**",
          "$APPLOCALDATA/*",
          "$LOCALDATA/**",
          "$LOCALDATA/*",
          "$RESOURCE/**",
          "$RESOURCE/*"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../default/": "default/",
      "../src/scripts/templates/": "frontend-templates/"
    }
  }
}
